<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="start"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ImageButton

        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:visibility="visible"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tittleTXT"
        android:visibility="visible"
        android:layout_above="@id/pesoEDT"
        android:text="@string/Tittle.TXT"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/tittle_purple" />

    <EditText
        android:id="@+id/pesoEDT"
        android:visibility="visible"
        android:layout_centerVertical="true"
        android:hint="@string/peso_emKG"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="24dp"
        style="@style/input_style" />

    <EditText
        android:id="@+id/alturaEDT"
        android:visibility="visible"
        android:layout_alignEnd="@id/pesoEDT"
        android:layout_alignStart="@id/pesoEDT"
        android:layout_below="@id/pesoEDT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:inputType="numberDecimal"
        android:hint="@string/altura_cm"
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="bold"
        style="@style/input_style" />

    <Button
        android:id="@+id/CalcularBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alturaEDT"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="214dp"
        android:backgroundTint="@color/Holo_Blue"
        android:text="@string/BTNCalcular"
        android:textSize="16sp"
        tools:visibility="visible" />



</RelativeLayout>